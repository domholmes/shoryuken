        <script src="~/Scripts/knockout-2.0.0.js"></script>
        <script src="~/Scripts/UpshotScripts/upshot.min.js"></script>
        <script src="~/Scripts/UpshotScripts/upshot.compat.knockout.min.js"></script>
        <script src="~/Scripts/UpshotScripts/upshot.knockout.extensions.js"></script>
        <script src="~/Scripts/native.history.js"></script>
        <script src="~/Scripts/nav.js"></script>
        <script src="~/Scripts/App/bindings.js"></script>
        @RenderSection("Script", false)
    </body>
</html>
