<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/"><span>Smart</span>Reminder</a></p>
        </div>
        <div class="float-right">@Html.ActionLink("Logout", "LogOff", "Account", null, null)</div>
    </div>
</header>
<div id="body">
    <div class="row">
        <div class="span12 margin-bottom">
            <button type="button" class="btn btn-large" data-bind="click: createReminder, css: { disabled: editing }">
                <span class="icon icon-pencil"></span>Add Reminder</button>
        </div>
    </div>
    <section class="row" data-bind="foreach: reminders">
        <article class="span3 card margin-bottom">
            <div class="display" data-bind="visible: !editing()">
                <div class="body">
                    <h2 data-bind="visible: name() != '', text: name">
                    </h2>
                    <p data-bind="text: message" class="message">
                    </p>
                </div>
                <footer data-bind="invisible: $root.editing()">
                    <span class="icon-menu-2 link-emulate" data-bind="click: $root.editReminder"></span>
                    <span class="icon-remove link-emulate" data-bind="click: $root.deleteReminder"></span>
                </footer>
            </div>
            <div class="edit" data-bind="visible: editing">
                <div class="body" data-bind="visible: editing">
                    <div class="float-right">
                        <input type="checkbox" data-bind="checked: enabled" class="styled" />
                    </div>
                    <textarea placeholder="Name" data-bind="value: name" class="name" rows="1" cols="1" ></textarea><br />
                    <textarea placeholder="Message" data-bind="value: message" rows="1" cols="1"></textarea>
                    <br />
                    <select data-bind="options: availableEvents, optionsText: 'text', optionsValue: 'value', value: actionId, optionsCaption: 'Select an action'">
                    </select><br />
                    <div class="input-append bootstrap-timepicker">
                        <input type="text" class="input-small timepicker" placeholder="Start time" data-bind="value: startTime" /><span
                            class="add-on"><i class="icon-time"></i></span><br />
                    </div>
                    <div class="input-append bootstrap-timepicker">
                        <input type="text" class="input-small timepicker" placeholder="End time" data-bind="value: endTime" /><span
                            class="add-on"><i class="icon-time"></i></span>
                    </div>
                    <div class="days" data-bind="foreach: availableDays">
                        <span data-bind="text: name, click: $parent.dayClick, css: { selected: $parent.isSelectedDay($data) }">
                        </span>
                    </div>
                </div>
                <footer>
                    <span class="link-emulate" data-bind="click: $root.endEdit">
                        Save</span>
                    <span class="link-emulate" data-bind="click: $root.cancelEdit">
                        Cancel</span>
                </footer>
            </div>
        </article>
    </section>
</div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/models/reminder.js")"></script>
    <script src="@Url.Content("~/Scripts/viewmodels/appViewModel.js")"></script>
    <script src="@Url.Content("~/Scripts/sr.js")"></script>
}
