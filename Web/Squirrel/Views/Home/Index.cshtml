<div id="body">
    <div class="row-fluid">
        <div class="span12 margin-bottom">
            <button type="button" class="btn btn-large add-reminder" data-bind="click: createReminder, css: { disabled: editing }">
                <span class="icon icon-pencil"></span>Add Reminder</button>
        </div>
    </div>
    
    <div data-bind="foreach: grouped" >
        <div data-bind="foreach: $data" class="row">
            <div class="column" data-bind="text: text"></div>
        </div>
    </div>
    
    <section class="row-fluid" data-bind="foreach: grouped">
        <div class="card-wrap" data-bind="foreach: $data">
            <article class="card margin-bottom" data-bind="disabled: (!enabled && !editing())" >
                <div class="display" data-bind="visible: !editing()" >
                    <div class="body">
                        <h2 data-bind="visible: name() != '', text: name">
                        </h2>
                        <p data-bind="text: message" class="message">
                        </p>
                    </div>
                    <footer data-bind="invisible: editing">
                        <span class="icon-menu-2 link-emulate" data-bind="click: $parent.editReminder"></span>
                        <span class="icon-remove link-emulate" data-bind="click: $parent.deleteReminder"></span>
                    </footer>
                </div>
                <div class="edit" data-bind="slideVisible: editing()">
                    <div class="body">
                        <div class="float-right">
                            <input type="checkbox" data-bind="checked: enabled" />
                        </div>
                        <textarea placeholder="Name" data-bind="value: name" class="name" rows="1" cols="1" ></textarea><br />
                        <textarea placeholder="Message" data-bind="value: message" rows="1" cols="1"></textarea>
                        <br />
                        <select data-bind="options: availableEvents, optionsText: 'text', optionsValue: 'value', value: actionId, optionsCaption: 'Select an action'">
                        </select><br />
                        <div class="input-append bootstrap-timepicker">
                            <input type="text" class="input-small timepicker" placeholder="Start time" data-bind="value: startTime" /><span
                                class="add-on"><i class="icon-time"></i></span><br />
                        </div>
                        <div class="input-append bootstrap-timepicker">
                            <input type="text" class="input-small timepicker" placeholder="End time" data-bind="value: endTime" /><span
                                class="add-on"><i class="icon-time"></i></span>
                        </div>
                        <div class="days" data-bind="foreach: availableDays">
                            <span data-bind="text: name, click: $parent.dayClick, css: { selected: $parent.isSelectedDay($data) }">
                            </span>
                        </div>
                    </div>
                    <footer>
                        <span class="link-emulate" data-bind="click: $root.saveReminder">
                            Save</span>
                        <span class="link-emulate" data-bind="click: $root.cancelEdit">
                            Cancel</span>
                    </footer>
                </div>
            </article>
        </div>
    </section>
</div>
